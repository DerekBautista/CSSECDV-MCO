<!--
    employee-list.hbs
    Purpose:
        - This is the partial page that contains the table for the employee list.
        - All employees from the database will be displayed here.
-->


            <div class="header">
                <span class="flex-container flex-row">
                    <h1>{{ pageTitle }}</h1>
                </span>

                <!-- Create a search bar here -->
                <form action="#" class="d-flex flex-row-reverse search-form search-employee">
                    <div class="form-input">
                        <input type="search" placeholder="Search an employee..."/>
                        <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </div>
                </form>
            </div>

            <!-- Container -->
            <div class="main-container">
                <!-- Data -->
                <div class="bottom-data">
                    <div class="reports">
                        <table id="employee-list-table">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Name</th>
                                    <th>Project Name</th>
                                    <th>Position</th>
                                    <th>Deployment (in Hrs)</th>
                                    <th>Rate (per Hr)</th>
                                    <th>Total Rate</th>
                                </tr>
                            </thead>
                            <tbody id="employee-list-tbody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- End of Container -->


